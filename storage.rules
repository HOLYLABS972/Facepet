rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload profile images to their own folder
    match /profile-images/{userId}/{allPaths=**} {
      // Allow read access to anyone (for displaying profile images)
      allow read: if true;
      
      // Allow write access only to authenticated users for their own folder
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow users to upload pet images
    match /pet-images/{userId}/{allPaths=**} {
      // Allow read access to anyone (for displaying pet images)
      allow read: if true;
      
      // Allow write access only to authenticated users for their own folder
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB limit for pet images
        && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow users to upload attachments
    match /attachments/{userId}/{allPaths=**} {
      // Allow read access to anyone (for displaying attachments)
      allow read: if true;
      
      // Allow write access only to authenticated users for their own folder
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB limit for attachments
        && (request.resource.contentType.matches('image/.*') // Images
            || request.resource.contentType.matches('application/pdf') // PDFs
            || request.resource.contentType.matches('text/.*') // Text files
            || request.resource.contentType.matches('application/msword') // Word docs
            || request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*')); // Office docs
    }
    
    // Default rule: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
